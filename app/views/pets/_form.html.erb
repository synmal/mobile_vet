<div class='form-group'>
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-control', placeholder: 'Pixie' %>
  <small class="form-text text-muted">*Required</small>
</div>

<div class='form-group'>
  <%= form.label :age, 'Age (years)' %>
  <%= form.number_field :age, class: 'form-control', placeholder: '3' %>
</div>

<div class='form-group'>
  <%= form.label :pet_type %>
  <%= form.text_field :pet_type, class: 'form-control', placeholder: 'Dog' %>
  <small class="form-text text-muted">*Required</small>
</div>

<div class='form-group'>
  <%= form.label :breed %>
  <%= form.text_field :breed, class: 'form-control', placeholder: 'Corgi' %>
</div>