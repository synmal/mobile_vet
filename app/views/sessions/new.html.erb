<h1>Log In</h1>

<%= form_with url: sessions_path, local: true do |form| %>
  <div class='form-group'>
    <%= form.label :email %>
    <%= form.text_field :email, class:'form-control', placeholder:'E-mail' %>
  </div>
  <div class='form-group'>
    <%= form.label :password %>
    <%= form.password_field :password, class:'form-control', placeholder:'Password' %>
  </div>
  <%= form.submit 'Log In', class:'btn btn-outline-primary' %>
<% end %>